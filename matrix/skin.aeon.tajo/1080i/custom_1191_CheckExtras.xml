<?xml version="1.0" encoding="UTF-8"?>
<window type="dialog" id="1191">
	<onload condition="[String.IsEqual(ListItem.DBTYPE,movie) | String.IsEqual(ListItem.DBTYPE,tvshow)] + Skin.HasSetting(SearchExtras) + Skin.HasSetting(SettingCommon) + !Window.IsActive(movieinformation)">RunScript(script.embuary.helper,action=lookforfile,file='"$VAR[Extras_lookup]"',prop=extras_yes)</onload>
	<visible>System.IdleTime(1)</visible>
	<visible>!ListItem.IsCollection</visible>
	<visible>!String.Contains(ListItem.Path,thumb:) + !String.Contains(ListItem.Path,image:) + !String.IsEqual(ListItem.FileExtension,strm) + !String.Contains(ListItem.Path,http)</visible>
	<visible>Container.Content(movies) | Container.Content(tvshows)</visible>
	<visible>!ListItem.IsParentFolder</visible>
	<visible>!Window.IsActive(movieinformation)</visible>
	<visible>Window.IsActive(videos) + Skin.HasSetting(SearchExtras) + Skin.HasSetting(SettingCommon)</visible>
	<visible>String.IsEmpty(Window(Home).Property(extras_yes))</visible>
	<controls/>
</window>