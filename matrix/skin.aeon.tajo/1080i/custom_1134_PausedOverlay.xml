<?xml version="1.0" encoding="UTF-8"?>
<window id="1134" type="dialog">
	<visible>VideoPlayer.IsFullscreen + Player.Paused + System.IdleTime(10) + !Skin.HasSetting(Disable.Netflix.Pause)</visible>
	<visible>VideoPlayer.Content(movies) | VideoPlayer.Content(episodes)</visible>
	<visible>!System.HasActiveModalDialog</visible>
	<controls>
		<control type="image">
			<include>FullscreenDimensions</include>
			<colordiffuse>AAFFFFFF</colordiffuse>
			<texture border="1">black.png</texture>
			<animation effect="fade" time="600">WindowOpen</animation>
			<animation effect="fade" time="600">WindowClose</animation>
		</control>
		<control type="grouplist">
			<left>70</left>
			<top>350</top>
			<width>1720</width>
			<height>600</height>
			<usecontrolcoords>true</usecontrolcoords>
			<animation type="WindowOpen" reversible="false">
				<effect type="fade" end="100" time="150"/>
			</animation>
			<animation type="WindowClose" reversible="false">
				<effect type="fade" start="100" end="0" time="100" delay="100"/>
			</animation>
			<control type="label">
				<width>1720</width>
				<height>60</height>
				<font>font14_title</font>
				<textoffsetx>15</textoffsetx>
				<textcolor>labelheader</textcolor>
				<label>[B]$LOCALIZE[31167][/B]</label>
			</control>
			<control type="image">
				<left>15</left>
				<width>1690</width>
				<height>200</height>
				<aspectratio align="left">keep</aspectratio>
				<texture>$INFO[Player.Art(clearlogo)]</texture>
				<visible>!String.IsEmpty(Player.Art(clearlogo))</visible>
			</control>
			<control type="image">
				<left>15</left>
				<width>1690</width>
				<height>200</height>
				<aspectratio align="left">keep</aspectratio>
				<texture>$INFO[Player.Art(tvshow.clearlogo)]</texture>
				<visible>!String.IsEmpty(Player.Art(tvshow.clearlogo))</visible>
			</control>
			<control type="textbox">
				<left>15</left>
				<width>760</width>
				<height>200</height>
				<aligny>center</aligny>
				<font>titlelist</font>
				<label>$INFO[VideoPlayer.Title]</label>
				<visible>VideoPlayer.Content(movies) + String.IsEmpty(Player.Art(clearlogo))</visible>
			</control>
			<control type="textbox">
				<left>15</left>
				<width>760</width>
				<height>200</height>
				<font>titlelist</font>
				<label>$INFO[VideoPlayer.TvShowTitle]</label>
				<visible>VideoPlayer.Content(episodes) + String.IsEmpty(Player.Art(tvshow.clearlogo))</visible>
			</control>
			<control type="label">
				<width>760</width>
				<height>100</height>
				<font>font15</font>
				<textoffsetx>15</textoffsetx>
				<wrapmultiline>true</wrapmultiline>
				<label>[B]$INFO[VideoPlayer.Title][/B]</label>
				<visible>VideoPlayer.Content(episodes)</visible>
			</control>
			<control type="textbox">
				<visible>VideoPlayer.Content(movies)</visible>
				<left>15</left>
				<width>760</width>
				<height>290</height>
				<font>font28</font>
				<align>left</align>
				<label>[B][COLOR themecolor]$LOCALIZE[345]:[/COLOR][/B] $INFO[VideoPlayer.Year][B][COLOR themecolor]    $LOCALIZE[20339]:[/B][/COLOR] [COLOR=FFFFFAF0]$INFO[VideoPlayer.Director][/COLOR]   [B][COLOR themecolor][CAPITALIZE]$LOCALIZE[21875]:[/COLOR][/B][/CAPITALIZE] [COLOR=FFFFFAF0]$INFO[VideoPlayer.Country][/COLOR][CR][COLOR themecolor][B]$LOCALIZE[515]:[/B][/COLOR] [COLOR=FFFFFAF0]$INFO[VideoPlayer.Genre][/COLOR]$INFO[VideoPlayer.OriginalTitle,[CR][B][COLOR themecolor]$LOCALIZE[20376]: [/B][/COLOR],][CR][B][COLOR themecolor]$LOCALIZE[207]:[/B][/COLOR] $INFO[VideoPlayer.Plot]</label>
				<autoscroll delay="5000" time="2000" repeat="5000">Skin.HasSetting(Enable.AutoScroll)</autoscroll>
			</control>
			<control type="textbox">
				<visible>VideoPlayer.Content(episodes)</visible>
				<left>15</left>
				<width>760</width>
				<height>185</height>
				<font>font28</font>
				<align>left</align>
				<label>$INFO[VideoPlayer.Season,[B][COLOR themecolor]$LOCALIZE[20373]: [/COLOR][/B],]$INFO[VideoPlayer.Episode,[B][COLOR themecolor]   $LOCALIZE[20359]: [/COLOR][/B],][CR][B][COLOR themecolor]$LOCALIZE[207]:[/B][/COLOR] $INFO[VideoPlayer.Plot]</label>
				<autoscroll delay="5000" time="2000" repeat="5000">Skin.HasSetting(Enable.AutoScroll)</autoscroll>
			</control>
		</control>
		<control type="grouplist">
			<animation type="WindowOpen" reversible="false">
				<effect type="fade" end="100" time="150"/>
			</animation>
			<animation type="WindowClose" reversible="false">
				<effect type="fade" start="100" end="0" time="100" delay="100"/>
			</animation>
			<animation effect="zoom" end="70" time="0" condition="true">Conditional</animation>
			<visible>VideoPlayer.Content(movies) | VideoPlayer.Content(episodes)</visible>
			<left>80</left>
			<top>930</top>
			<right>0</right>
			<height>90</height>
			<itemgap>0</itemgap>
			<orientation>horizontal</orientation>
			<control type="group">
				<width>260</width>
				<control type="label">
					<width>200</width>
					<height>90</height>
					<align>center</align>
					<aligny>center</aligny>
					<label>$INFO[VideoPlayer.Studio]</label>
					<font>font12</font>
					<textcolor>grey</textcolor>
					<wrapmultiline>true</wrapmultiline>
				</control>
			</control>
			<control type="image">
				<width>160</width>
				<include>MediaFlagVars</include>
				<texture fallback="resources/mpaa/NR.png">$VAR[VideoRatingFlagVar]</texture>
			</control>
			<control type="image">
				<width>220</width>
				<include>MediaFlagVars</include>
				<texture fallback="resources/flag_default.png">$VAR[mediaicons_path]videoresolution/$INFO[VideoPlayer.VideoResolution,,.png]</texture>
			</control>
			<control type="image">
				<width>220</width>
				<include>MediaFlagVars</include>
				<texture>$VAR[mediaicons_path]audiocodec/$INFO[VideoPlayer.AudioCodec,,.png]</texture>
			</control>
			<control type="image">
				<width>220</width>
				<include>MediaFlagVars</include>
				<texture>$VAR[mediaicons_path]videocodec/$VAR[VideoSourceFlagVar,,.png]</texture>
			</control>
			<control type="image">
				<width>220</width>
				<include>MediaFlagVars</include>
				<texture>$VAR[mediaicons_path]audiochannels/$INFO[VideoPlayer.AudioChannels,,.png]</texture>
			</control>
			<control type="image">
				<width>220</width>
				<include>MediaFlagVars</include>
				<texture>$VAR[mediaicons_path]aspectratio/$INFO[VideoPlayer.VideoAspect,,.png]</texture>
			</control>
		</control>
	</controls>
</window>